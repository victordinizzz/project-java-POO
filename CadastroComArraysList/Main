            Scanner scanner = new Scanner(System.in);
    ArrayList<Usuario> usuarios = new ArrayList<Usuario>();
            String continuar = "s";

            do {
                System.out.println("Quantos usuários deseja criar?");
                int quantidade = scanner.nextInt();
                scanner.nextLine();

                for (int i = 0; i < quantidade; i++) {
                    Usuario u = new Usuario();

                    System.out.println("Digite seu nome:");
                    u.setName(scanner.nextLine());

                    System.out.println("Digite seu sobrenome:");
                    u.setSobrenome(scanner.nextLine());

                    System.out.println("Digite seu email:");
                    u.setEmail(scanner.nextLine());

                    System.out.println("Digite sua senha:");
                    u.setSenha(scanner.nextLine());

                    System.out.println("Digite sua idade:");
                    u.setIdade(scanner.nextInt());
                    scanner.nextLine(); // limpar o enter

                    usuarios.add(u); // adiciona o usuário à lista
                }

                System.out.println("Deseja continuar cadastrando? (s/n)");
                continuar = scanner.nextLine();

            } while (continuar.equalsIgnoreCase("s"));

            System.out.println("\n--- Usuários cadastrados ---");
            for (Usuario u : usuarios) {
                System.out.println(u.getUsuario());
            }


    
  }// man

 
}//fim de classe
